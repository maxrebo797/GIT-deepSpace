
/** SASS partial for grunt-spritesmith, autogenerated, do not edit! */

{{#items}}

.sprite-{{name}} {
	width: {{px.width}};
	height: {{px.height}};
	background-position: {{px.offset_x}} {{px.offset_y}};
	background-image: url({{{escaped_image}}});
	display: block;
}

.sprite-{{name}}-2x {
	$width: {{px.width}};
	$height: {{px.height}};
	$offset-x: {{px.offset_x}};
	$offset-y: {{px.offset_y}};
	$total-width: {{px.total_width}};
	width: $width/2;
	height: $height/2;
	background-position: $offset-x/2 $offset-y/2;
	background-image: url({{{escaped_image}}});
	background-size: $total-width/2 auto;
	display: block;
}

{{/items}}

/** Extends sprite classes created by grunt-spritesmith
 *	@param (string) $sprite - the sprite to use (without sprite- prefix)
 */
@mixin sprite($sprite, $retina:false, $hidetext:true) {
	@if($retina) {
		@extend .sprite-#{$sprite}-2x;
	}
	@else {
		@extend .sprite-#{$sprite};
	}
	
	@if($hidetext) {
		overflow: hidden;
		text-indent: -9999em;
	}
	box-sizing: content-box;
}